{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    "module": "es6",
    "lib": [
      "es6",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "experimentalDecorators": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}